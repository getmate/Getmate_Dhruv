<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/handle"
            android:layout_height="25dp"
            android:text="Random_Nerd"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:padding="1dp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/bio_button"/>


    </LinearLayout>



    <LinearLayout android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"

        android:background="@drawable/profile_background"
        >
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="68dp"
            android:layout_marginBottom="8dp"
            android:text="Dhruv Gajwa"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"

            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:lines="2"
            android:text="Student at IIT Madras in Bio-Medical department"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/tvEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="4dp"
            android:text="IIT Madras - Chennai"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"
            android:text="JAMUNA 450"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"/>

        <Space
            android:id="@+id/spaceHolder"
            android:layout_width="10dp"
            android:layout_height="0dp"
            />



        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="310dp"
            android:layout_height="wrap_content"

            android:textSize="14sp"
            android:gravity="center"
            android:lines="3"
            android:ellipsize="end"
            android:text="My life is dull an I don't know what to do so I am doing nothing at all"
            android:fontFamily="sans-serif-medium"/>

        <TextView android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:drawableLeft="@mipmap/email_icon"

            android:drawablePadding="10dp"
            android:text="dhruvg.dakshana16@gmail.com"
            android:gravity="center"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/contact_details"
            android:layout_width="match_parent"

            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <com.getmate.getmate_final.Utils.RoundedImageView
                android:id="@+id/fb_icon"
                android:src="@drawable/fb_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.getmate.getmate_final.Utils.RoundedImageView
                android:id="@+id/pin_interest_icon"
                android:src="@mipmap/ic_launcher_foreground_pinterest"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.getmate.getmate_final.Utils.RoundedImageView
                android:id="@+id/instagram_icon"
                android:src="@mipmap/ic_launcher_foreground_insta"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.getmate.getmate_final.Utils.RoundedImageView
                android:id="@+id/github_icon"
                android:src="@mipmap/github_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.getmate.getmate_final.Utils.RoundedImageView
                android:id="@+id/wordpress_icon"
                android:src="@mipmap/wordpress_icon"

                android:layout_width="40dp"
                android:layout_height="40dp" />
            <com.getmate.getmate_final.Utils.RoundedImageView
                android:id="@+id/linkedin_icon"
                android:src="@mipmap/linkedin_ison"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="3"
            android:visibility="gone"
            android:id="@+id/radiogrp_prfl"


            >
            <RadioButton
                android:id="@+id/recent_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="RECENT"
                android:background="@drawable/activities_button"
                android:button="@null"
                android:textColor="@color/colorButton"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="5dp"
                />
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
               android:layout_marginRight="5dp"
                android:text="INTEREST"
                android:background="@drawable/activities_button"
                android:button="@null"

                android:textColor="@color/colorButton"
                android:layout_gravity="center"
                android:gravity="center"
                />


            <RadioButton
                android:textColor="@color/colorButton"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:button="@null"
                android:text="ACHIEVEMENTS"
                android:background="@drawable/activities_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />

        </RadioGroup>


        </LinearLayout>



    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/darkgrey"/>

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/tab_layout"
            app:tabTextColor="@color/bg_interest"
            app:tabSelectedTextColor="@color/colorButton"
            android:elevation="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:textColor="@drawable/peopletext"
            app:tabMode="scrollable"

            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:minHeight="410dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v4.view.ViewPager>
    </LinearLayout>
    </ScrollView>



</android.support.design.widget.CoordinatorLayout>