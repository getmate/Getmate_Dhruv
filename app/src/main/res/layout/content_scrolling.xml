<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.getmate.getmate_final.Activities.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title_scrlng_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:text="Clay modelling"/>
            <TextView
                android:id="@+id/at"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_scrlng_act"
                android:layout_centerHorizontal="true"
                android:text="at"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/venue"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="Babaji ka bhoot bangla"
                android:layout_below="@id/at"
                android:layout_centerHorizontal="true"
                android:textSize="18dp"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <Button
                android:layout_gravity="center"
                android:gravity="center"
                android:ellipsize="middle"
                android:singleLine="true"
                android:id="@+id/link_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@drawable/link"
                android:padding="30dp"
                />
            <Button
                android:drawableTop="@drawable/clock"
                android:text="AUG 01, 6 pm"
                android:id="@+id/time_sa"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@color/white"/>
            <Button
                android:text="9 going"
                android:id="@+id/gng_cnt_b"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableTop="@drawable/people"/>


        </LinearLayout>
        <com.getmate.getmate_final.FeedImageView
            android:layout_marginHorizontal="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_scrl_activity"/>

        <TextView
            android:id="@+id/description"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="no large text here because it sucks more than a newborn baby doed to nipple"
            android:ellipsize="middle"

            />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/email_sa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/emaill"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="dhruvgajwa008@gmail.com" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/phone"
                    android:text="7092541851"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>

            </LinearLayout>


    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
