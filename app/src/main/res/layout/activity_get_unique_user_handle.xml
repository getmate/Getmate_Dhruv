<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.getmate.getmate_final.Activities.getUniqueUserHandle">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="40dp"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Select Unique_User Handle"
            android:textColor="@color/darkgrey"

            android:gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/unique_"
            android:hint="Random___Nerd"
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:layout_margin="50dp"
            android:textColorHint="@color/lightgrey"
            android:backgroundTint="@color/bg_interest"
            android:layout_height="wrap_content" />
        <Button
            android:background="@drawable/activities_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="select"
            android:textColor="@color/blue"
            android:id="@+id/sel_btn"

            android:layout_gravity="center"/>
    </LinearLayout>
    </LinearLayout>
    <view
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"

        android:background="@color/darkgrey"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/button_margin_horizontal"
            android:text="Click SELECT to set it as your UNIQUE ID and ask your freinds to find you"
            />
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:gravity="center"
            android:textSize="14dp"
            android:lines="2"
            android:text="need a unique user handle to let your freinds find you easily"/>

    </LinearLayout>


</LinearLayout>
